{
    "build":{ "dockerfile": "Dockerfile" },
    "remoteUser": "developer",
    "runArgs": [
        "--net", "host",

        // use a debugger from within the container
        "--cap-add=SYS_PTRACE", "--security-opt", "seccomp=unconfined",

        // run X11 apps from within the container; requires nvidia-container-toolkit for 3D acceleration
        "--ipc", "host",
        "--gpus=all",
        "-v", "/tmp/.X11-unix:/tmp/.X11-unix",
        "-v", "/run/user/1000:/run/user/1000",
        "-v", "/usr/share/icons:/usr/share/icons",
        "-e", "DISPLAY=${env:DISPLAY}",
        "-e", "QT_X11_NO_MITSHM=1",
        "-e", "DBUS_SESSION_BUS_ADDRESS=unix:path=/run/user/1000/bus",
        "-e", "/var/run/dbus/system_bus_socket:/var/run/dbus/system_bus_socket",
        "-e", "XDG_RUNTIME_DIR=/run/user/1000",
        "-e", "NVIDIA_DRIVER_CAPABILITIES=display"
    ],
    "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
    },
    "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cpptools-extension-pack",
        "ms-vscode.cmake-tools", 
        "donjayamanne.githistory", 
        "ms-python.vscode-pylance", 
        "ms-python.python",
        "ms-azuretools.vscode-docker"]
}
